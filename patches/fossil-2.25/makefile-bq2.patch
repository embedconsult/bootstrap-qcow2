Subject: [PATCH] Add Makefile.bq2 for prefix-aware classic builds

---
 Makefile.bq2 | 14 ++++++++++++++
 1 file changed, 14 insertions(+)
 create mode 100644 Makefile.bq2

diff --git a/Makefile.bq2 b/Makefile.bq2
new file mode 100644
index 0000000..ad8b7f7
--- /dev/null
+++ b/Makefile.bq2
@@ -0,0 +1,14 @@
+# Bootstrap-Qcow2 overrides for the classic Fossil makefile.
+# Use the environment toolchain and default to /usr installs.
+MAKE_COMPILATION_DB = no
+include Makefile.classic
+
+ifeq ($(origin CC),default)
+CC = clang
+endif
+prefix ?= /usr
+BCC = $(CC)
+TCC = $(CC) -g -Os -Wall
+TCCFLAGS += $(LDFLAGS)
+TCCFLAGS += -Wno-unused-command-line-argument
+CFLAGS_INCLUDE = $(CPPFLAGS)
